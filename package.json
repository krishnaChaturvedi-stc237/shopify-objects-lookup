{
  "name": "shopify-object-lookup",
  "displayName": "Shopify Objects Lookup Pro",
  "description": "Context-aware autocomplete and schema reference for Shopify 2.0 Liquid development.",
  "version": "0.1.0",
  "publisher": "KrishnaChaturvedi",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#95bf47",
    "theme": "dark"
  },
  "keywords": [
    "shopify",
    "liquid",
    "autocomplete",
    "intellisense",
    "shopify 2.0"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Education"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:liquid",
    "onLanguage:html"
  ],
  "contributes": {
    "languages": [
      {
        "id": "liquid",
        "extensions": [
          ".liquid"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "package": "node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "20.x",
    "esbuild": "^0.20.0",
    "typescript": "^5.4.0"
  }
}
